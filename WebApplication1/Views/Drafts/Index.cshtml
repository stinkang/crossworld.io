@model IEnumerable<CrossWorldApp.Models.Draft>

@{
    ViewBag.Title = "Drafts";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<div id="compose-root"></div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/dist/compose.js"></script>

<script type="text/javascript">
    (function () {
        window.InitCompose();
    })();
</script>

